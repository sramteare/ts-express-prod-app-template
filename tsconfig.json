{
    "compilerOptions" :{
        "lib": ["es2020"],
        "target": "esnext",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "pretty": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/server/*"],
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}